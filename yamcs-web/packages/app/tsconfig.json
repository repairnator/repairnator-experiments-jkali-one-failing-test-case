{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",

    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",

    // Needed by angular
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,
    "strictFunctionTypes": false, // TODO
    "strictPropertyInitialization": false, // TODO

    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
     // Used by ng-packagr only
    "**/lib.ts",
    "**/lib/dist"
  ]
}
