<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>test-analyzer-extensions</artifactId>
	<packaging>jar</packaging>

	<name>TestAnalyzer Extensions</name>

	<parent>
		<groupId>de.tum.in.niedermr.ta</groupId>
		<artifactId>test-analyzer-parent</artifactId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>

	<properties>
		<rootFolder>${project.basedir}/../</rootFolder>
	</properties>

	<build>
		<plugins>
		
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.10</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/test/resources</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
	
			<plugin>
				<!-- Needed so that (only) JUnit tests get executed (otherwise testNg 
					is used because of the dependency) -->
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.surefire</groupId>
						<artifactId>surefire-junit47</artifactId>
						<version>2.19.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>de.tum.in.niedermr.ta</groupId>
			<artifactId>test-analyzer-core</artifactId>
			<version>${currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>de.tum.in.niedermr.ta</groupId>
			<artifactId>test-analyzer-runner</artifactId>
			<version>${currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>de.tum.in.niedermr.ta</groupId>
			<artifactId>test-analyzer-sdist</artifactId>
			<version>${currentVersion}</version>
		</dependency>
		
		<dependency>
			<groupId>de.tum.in.niedermr.ta</groupId>
			<artifactId>test-analyzer-core</artifactId>
			<version>${currentVersion}</version>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>de.tum.in.niedermr.ta</groupId>
			<artifactId>test-analyzer-runner</artifactId>
			<version>${currentVersion}</version>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${testng.version}</version>
		</dependency>
	</dependencies>

</project>
