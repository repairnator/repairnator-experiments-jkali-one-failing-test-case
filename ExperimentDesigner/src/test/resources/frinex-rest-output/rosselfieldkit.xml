    <presenter back="Menu" menuLabel="Task 1" next="Menu" type="stimulus" self="Task_1" title="Task 1">
        <centrePage/>
        <loadSdCardStimulus eventTag="Task 1" randomise="true" repeatRandomWindow="0" maxStimuli="1000" repeatCount="1">
            <hasMoreStimulus>
                <startAudioRecorder eventTag="Task 1" wavFormat="true" filePerStimulus="false"/>
                <withMatchingStimulus eventTag="" randomise="true" repeatRandomWindow="0" matchingRegex="([^_]*_)*" maxStimuli="1000" repeatCount="1">
                    <hasMoreStimulus>
                        <clearPage/>
                        <stimulusPresent msToNext="0" maxHeight="80" percentOfPage="0" animate="none" maxWidth="80">
                            <addPadding/>
                            <actionButton featureText="Next" eventTag="Next" hotKey="SPACE" styleName="hiddenBottomRight">
                                <endAudioRecorderTag eventTier="1" eventTag="image"/>
                                <clearPage/>
                                <backgroundImage msToNext="1" src="file:///storage/emulated/0/MPI_STIMULI/background1.png" styleName="">
                                    <stimulusPresent msToNext="0" maxHeight="30" percentOfPage="0" animate="bounce" maxWidth="30">
                                        <addPadding/>
                                        <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                                        <actionButton featureText="Play Sound" styleName="hiddenTopRight">
                                            <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                                        </actionButton>
                                        <actionButton featureText="Next" eventTag="Next" hotKey="SPACE" styleName="hiddenBottomRight">
                                            <endAudioRecorderTag eventTier="2" eventTag="image bounce audio"/>
                                            <removeStimulus/>
                                            <nextMatchingStimulus/>
                                        </actionButton>
                                        <startAudioRecorderTag eventTier="2"/>
                                    </stimulusPresent>
                                </backgroundImage>
                            </actionButton>
                            <startAudioRecorderTag eventTier="1"/>
                        </stimulusPresent>
                    </hasMoreStimulus>
                    <endOfStimulus>
                        <nextStimulus repeatIncorrect="false"/>
                    </endOfStimulus>
                </withMatchingStimulus>
            </hasMoreStimulus>
            <endOfStimulus>
                <stopAudioRecorder/>
                <autoNextPresenter/>
            </endOfStimulus>
            <randomGrouping/>
            <stimuli>
                <tag>Task_1</tag>
            </stimuli>
        </loadSdCardStimulus>
    </presenter>
    <presenter back="Menu" menuLabel="Task 2" next="Menu" type="stimulus" self="Task_2" title="Task 2">
        <centrePage/>
        <loadSdCardStimulus eventTag="Task 2" randomise="true" repeatRandomWindow="0" excludeRegex=".*_question\\....$" maxStimuli="1000" repeatCount="1">
            <hasMoreStimulus>
                <startAudioRecorder eventTag="Task 2" wavFormat="true" filePerStimulus="false"/>
                <clearPage/>
                <matchingStimulusGrid randomise="true" matchingRegex="([^_]*_)*" columnCount="10" maxStimuli="1000" animate="none" maxWidth="100">
                    <responseCorrect msToNext="0">
                        <endAudioRecorderTag eventTier="4" eventTag="correct image clicked"/>
                        <clearPage/>
                        <backgroundImage msToNext="1" src="file:///storage/emulated/0/MPI_STIMULI/background2.png" styleName="">
                            <stimulusPresent msToNext="0" maxHeight="30" percentOfPage="0" animate="bounce" maxWidth="30"/>
                            <addPadding/>
                            <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                            <actionButton featureText="Play Sound" styleName="hiddenTopRight">
                                <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                            </actionButton>
                            <actionButton featureText="Next" eventTag="Next" hotKey="SPACE" styleName="hiddenBottomRight">
                                <endAudioRecorderTag eventTier="1" eventTag="task 2 animated"/>
                                <nextStimulus repeatIncorrect="false"/>
                            </actionButton>
                        </backgroundImage>
                    </responseCorrect>
                    <responseIncorrect msToNext="0">
                        <endAudioRecorderTag eventTier="4" eventTag="incorrect image clicked"/>
                        <clearPage/>
                        <backgroundImage msToNext="1" src="file:///storage/emulated/0/MPI_STIMULI/background2.png" styleName="">
                            <stimulusPresent msToNext="0" maxHeight="30" percentOfPage="0" animate="bounce" maxWidth="30"/>
                            <addPadding/>
                            <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                            <actionButton featureText="Play Sound" styleName="hiddenTopRight">
                                <stimulusAudio msToNext="0" showPlaybackIndicator="false"/>
                            </actionButton>
                            <actionButton featureText="Next" eventTag="Next" hotKey="SPACE" styleName="hiddenBottomRight">
                                <endAudioRecorderTag eventTier="1" eventTag="task 2 animated"/>
                                <nextStimulus repeatIncorrect="false"/>
                            </actionButton>
                        </backgroundImage>
                    </responseIncorrect>
                </matchingStimulusGrid>
                <addPadding/>
                <actionButton featureText="Play Sound" styleName="hiddenTopRight">
                    <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_question" showPlaybackIndicator="false"/>
                </actionButton>
                <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_question" showPlaybackIndicator="false"/>
                <startAudioRecorderTag eventTier="4"/>
                <actionButton featureText="Skip" eventTag="Skip" hotKey="SPACE" styleName="hiddenBottomRight">
                    <endAudioRecorderTag eventTier="1" eventTag="task 2 skipped"/>
                    <nextStimulus repeatIncorrect="false"/>
                </actionButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <stopAudioRecorder/>
                <autoNextPresenter/>
            </endOfStimulus>
            <randomGrouping/>
            <stimuli>
                <tag>Task_2</tag>
            </stimuli>
        </loadSdCardStimulus>
    </presenter>
