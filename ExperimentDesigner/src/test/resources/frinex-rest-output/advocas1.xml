<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<experiment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://frinexbuild.mpi.nl/frinex.xsd" appNameDisplay="Adaptive Vocabulary Assessment 1" appNameInternal="advocas1" backgroundColour="#FFFFFF" complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" defaultScale="1.0" isScalable="true" preserveLastState="true" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#4A7777" primaryColour3="#96ADAD" primaryColour4="#D5D8D8" rotatable="true" showMenuBar="false" textFontSize="17">
    <preventWindowClose featureText="Bij reload worden ingetypte data verwiderd"/>
    <!--<experiment appNameDisplay="Adaptive Vocabulary Assessment" appNameInternal="advocas" backgroundColour="#FFFFFF" complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" defaultScale="1.0" isScalable="true" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#4A7777" primaryColour3="#96ADAD" primaryColour4="#D5D8D8" showMenuBar="false" textFontSize="17">-->
    <metadata>
        <field controlledMessage="Input at least 3 letters." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="Wat is je proefpersoonnummer?"/>
        <field controlledMessage="." controlledRegex=".*" postName="stimuli" preventServerDuplicates="false" registrationField="stimuli"/>
        <field controlledMessage="Input at least 3 letters." controlledRegex="['\\'S'\\'s]'{'3,'}'" postName="feedBack" preventServerDuplicates="false" registrationField=""/>
    </metadata>
    <presenter displayOrder="1" menuLabel="stop (en herstart)" next="Accord" type="metadata" self="Edit_User" title="">
        <metadataField fieldName="workerId"/>
        <saveMetadataButton featureText="Volgende" sendData="true" networkErrorMessage="Cannot connect to the server, please check your internet connection.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter back="Edit_User" displayOrder="2" menuLabel="Accord" next="stimuliScreen" type="metadata" self="Accord" title="">
        <htmlText featureText="Welkom bij dit experiment!&lt;br/&gt;&lt;br/&gt;
In dit experiment krijg je een aantal woorden aangeboden. Sommige zijn bestaande Nederlandse woorden en sommige zijn nepwoorden.&lt;br/&gt;
Geef voor elk woord met een muisklik aan of jij het woord kent of niet.&lt;br/&gt;&lt;br/&gt;
Rechts: : JA, ik ken dit woord&lt;br/&gt;
Links: NEE, ik ken dit woord niet&lt;br/&gt;&lt;br/&gt;
Let op: zeg geen ja bij woorden die je niet kent, omdat ja-antwoorden voor nepwoorden streng bestraft worden.&lt;br/&gt;&lt;br/&gt;
Veel succes!"/>
        <targetButton featureText="Begin experiment" target="stimuliScreen"/>
    </presenter>
    <presenter back="Edit_User" displayOrder="3" menuLabel="stimuliN" next="End" type="stimulus" self="stimuliScreen" title="">
        <loadStimulus class="nl.mpi.tg.eg.frinex.adaptivevocabularyassessment.client.service.AdVocAsStimuliProvider"  eventTag="stimuliN" wordsSource="Words_NL_1round" 
                      nonwordsSource="NonWords_NL_1round">
            <hasMoreStimulus>
                <clearPage/>
                <centrePage/>
                <!--                <showStimulusProgress/>-->
                <stimulusLabel styleName="groupMessageLabel"/>
                <addPadding/>
                <stimulusRatingButton eventTier="1" ratingLabelRight="" ratingLabelLeft="">
                    <nextStimulus repeatIncorrect="false"/>
                </stimulusRatingButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <sendStimuliReport type="user_summary" />
                <sendStimuliReport type="fast_track" />
                <sendStimuliReport type="fine_tuning" />
                <showStimuliReport/>
                <targetButton featureText="Volgende" target="End"/>
                <!--                <autoNextPresenter/>-->
            </endOfStimulus>
            <randomGrouping/>
            <stimuli/>
        </loadStimulus>
    </presenter>
    <presenter back="Edit_User" displayOrder="4" menuLabel="End" type="transmission" self="End" title="End">
        <sendAllData>
            <onSuccess>
                <htmlText featureText="Einde van de taak. Dankjewel voor je deelname!"/>
                <addPadding/>
                <!--                <generateCompletionCode/>-->
                <addPadding/>
                <eraseUsersDataButton featureText="Opnieuw beginnen"/>
            </onSuccess>
            <onError>
                <plainText featureText="Cannot connect to the server, please check your internet connection."/>
                <targetButton featureText="Retry" target="End"/>
            </onError>
        </sendAllData>
    </presenter>
    <presenter back="Edit_User" displayOrder="5" menuLabel="about" type="debug" self="about" title="about">
        <versionData/>
        <eraseLocalStorageButton/>
        <localStorageData/>
    </presenter>
    <stimuli>        
        <stimulus audioPath="" code="" identifier="example1" pauseMs="0" ratingLabels="stopped,continue">
            <tag>set1</tag>
            <tag>set2</tag>
            <tag>set3</tag>
        </stimulus>
    </stimuli>
</experiment>
