    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>${artifactId}-${version}.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>*commons-dbutils*</include>
                <include>*geoserver-layer-filter-extension*</include>
            </includes>
        </dependencySet>
    </dependencySets>
