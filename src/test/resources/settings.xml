    <profiles>
        <profile>
            <id>gpg-keyname</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.keyname>${env.CI_OPT_GPG_KEYNAME}</gpg.keyname>
            </properties>
        </profile>
    </profiles>

